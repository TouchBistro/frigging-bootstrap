.frigb-ta .form-control
  cursor text
  height auto

.frigb-ta-selection
  cursor pointer
  float left
  margin-right 8px
  margin-top 1px
  margin-bottom 6px
  padding 4px 12px

.frigb-ta-input
  outline none
  border none !important
  -webkit-box-shadow none !important
  -moz-box-shadow none !important
  box-shadow none !important
  width 70%
  padding 0px

.frigb-ta-suggestions
  li
    cursor pointer