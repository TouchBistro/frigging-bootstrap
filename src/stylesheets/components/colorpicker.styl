colorpicker-components-top = 1em
colorpicker-components-bottom = 1em

abs($top = auto, $left = auto, $bottom = $auto, $right = auto)
  display: block
  position: absolute
  top: $top
  bottom: $bottom
  left: $left
  right: $right
.frig-color-input
  z-index: 999
  position: relative
.frigb-color-block
  position relative
  float right
  width 20px
  height 20px
  border-radius 5px
  margin-top -26px
  margin-right 8px
  z-index 1000
.frigb-colorpicker
  height: 15em
  width: 95%
  position: absolute
  z-index: 999
  background-color: #fff
  border: 1px solid #ccc
  border-radius: 0.3em
  box-shadow: 0.2em 0.2em 0.1em #ccc
  padding: 0.5em
  margin-top: 0.5em
  .frigb-map
    abs(colorpicker-components-top, 1em, colorpicker-components-bottom, 2.3em)
    user-select: none
    overflow: visible
    cursor: pointer
    &.dark .frigb-pointer
      border-color: white
    &.light .frigb-pointer
      border-color: black
    .frigb-pointer
      position: absolute
      width: 10px
      height: 10px
      margin-left: -1*5px
      margin-bottom: -1*5px
      border-radius: 100%
      border: 1px solid #fff
    .frigb-background
      top: 0
      left: 0
      position: absolute
      height: 100%
      width: 100%
    .frigb-background:before,
    .frigb-background:after
      display: block
      content: ""
      position: absolute
      top: 0
      left: 0
      bottom: 0
      right: 0
    .frigb-background:after
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%)
    .frigb-background:before
      background: linear-gradient(to right, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0) 100%)
  .frigb-slider
    position: absolute
    user-select: none
    &.frigb-vertical
      top: 0
      bottom: 0
      left: 50%
      width: 10px
      cursor: pointer
      .frigb-track
        position: absolute
        top: 0
        bottom: 0
        left: 50%
        width: 6px
        margin-left: -1*3px
    .frigb-track
      border-radius: 3px
      background: #888888
    .frigb-pointer
      position: absolute
      bottom: 50%
      left: 50%
      width: 14px
      height: 14px
      background: #dddddd
      margin-left: -1*7px
      margin-bottom: -1*7px
      border-radius: 14px
  .frigb-hue-slider
    abs(colorpicker-components-top, auto, colorpicker-components-bottom, 1.7em)
    .frigb-track
      background: linear-gradient(to bottom, red 0%, #ff0099 10%, #cd00ff 20%, #3200ff 30%, #0066ff 40%, #00fffd 50%, #00ff66 60%, #35ff00 70%, #cdff00 80%, #ff9900 90%, red 100%)
